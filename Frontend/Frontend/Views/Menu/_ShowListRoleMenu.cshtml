@using Frontend.DTOs;
@using Frontend.Models.ViewModel.Menu;
@using Frontend.Utilities;
@model List<RoleMenuDTO>
@{
    var common = new Common();
    var loginInfo = common.GetValueBySession();
}
<div class="col-md-12">
    <div class="card">
        <div class="card-body">
            <div class="float-end">
                @if(loginInfo.roleName == "Manager"){
                    <a class="btn btn-success mt-3 mb-3" onclick="PopupNew()">
                        <i class="bi bi-plus-lg me-1"></i>
                        Add Menu To Role
                    </a>
                }
            </div>
            <table id="tbdSearh" class="table table-hover">
                <thead>
                    <tr class="text-center">
                        <th scope="col">Role</th>
                        <th scope="col">Menu</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody id="tbdResult">
                    @if (Model.Count > 0)
                    {
                        @foreach (var item in Model)
                        {
                            <tr class="text-center">
                                <td>@item.Role</td>
                                <td>@item.MenuName</td>
                                <td>
                                    <a class="btn btn-danger me-2" onclick="ConfirmDeleteRoleMenu('@item.Id','@item.MenuName')">
                                        <i class="bi bi-trash-fill"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
